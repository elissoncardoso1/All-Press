  "protocol_reference": {
    "HPGL": {
      "name": "HP Graphics Language",
      "version": "1.0",
      "description": "Vector-based plotter language",
      "requires_preprocessing": true,
      "best_for": ["CAD drawings", "Technical diagrams"]
    },
    "HPGL2": {
      "name": "HP Graphics Language 2",
      "version": "2.0",
      "description": "Enhanced vector plotter language with raster support",
      "requires_preprocessing": true,
      "best_for": ["CAD drawings", "Technical diagrams", "Mixed content"]
    },
    "PostScript": {
      "name": "Adobe PostScript",
      "version": "3.0",
      "description": "Page description language",
      "requires_preprocessing": false,
      "best_for": ["Documents", "Graphics", "Photos"]
    },
    "ESC/P": {
      "name": "Epson Standard Code for Printers",
      "version": "2.0",
      "description": "Epson printer command set",
      "requires_preprocessing": false,
      "best_for": ["Text", "Simple graphics"]
    },
    "PDF": {
      "name": "Portable Document Format",
      "version": "1.7",
      "description": "Universal document format",
      "requires_preprocessing": false,
      "best_for": ["All document types"]
    }
